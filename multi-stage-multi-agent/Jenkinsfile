pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.9.11-adoptopenjdk-21' }
      }
      steps {
        sh 'mvn --version'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:21-alpine' }
      }
      steps {
        sh 'node --version'
      }
    }
  }
}
